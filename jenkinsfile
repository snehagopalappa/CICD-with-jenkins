pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building the code...'
                    echo 'Task: Compile and package the application.'
                    echo 'Tool: Maven (or another build automation tool).'
                }
            }
        }

        stage('test'){
            steps {
                script{
                    echo'test'
                }
            }
        }
        
        stage('Unit and Integration Tests') {
            steps {
                script {
                    echo 'Running unit and integration tests...'
                    echo 'Task: Execute unit tests and integration tests to ensure code functionality.'
                    echo 'Tool: Mocha (or another testing framework).'
                }
            }
        }
        
        stage('Code Analysis') {
            steps {
                script {
                    echo 'Analyzing code...'
                    echo 'Task: Perform static code analysis to check for code quality and standards.'
                    echo 'Tool: SonarQube (or another code analysis tool).'
                }
            }
        }
        
        stage('Security Scan') {
            steps {
                script {
                    echo 'Performing security scan...'
                    echo 'Task: Scan the code for vulnerabilities and security issues.'
                    echo 'Tool: OWASP ZAP (or another security scanning tool).'
                }
            }
        }
        
        stage('Deploy to Staging') {
            steps {
                script {
                    echo 'Deploying to staging server...'
                    echo 'Task: Deploy the application to a staging environment for testing.'
                    echo 'Tool: AWS EC2 (or another cloud service).'
                }
            }
        }
        
        stage('Integration Tests on Staging') {
            steps {
                script {
                    echo 'Running integration tests on staging...'
                    echo 'Task: Verify that the application works as expected in the staging environment.'
                    echo 'Tool: Postman (or another integration testing tool).'
                }
            }
        }
        
        stage('Deploy to Production') {
            steps {
                script {
                    echo 'Deploying to production server...'
                    echo 'Task: Deploy the application to the production environment.'
                    echo 'Tool: AWS EC2 (or another cloud service).'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
            
        }

        success {
            emailext (
                to: 'snehajenkins@gmail.com', 
                subject: "Build Successful: ${currentBuild.fullDisplayName}",
                body: "The build was successful.\n\nCheck console output at: ${env.BUILD_URL}",
                attachLog: true
            )
        }
        
        failure {
            emailext (
                to: 'snehajenkins@gmail.com', 
                subject: "Build Failed: ${currentBuild.fullDisplayName}",
                body: "The build has failed.\n\nCheck console output at: ${env.BUILD_URL}",
                attachLog: true
            )
        }
    }
}
